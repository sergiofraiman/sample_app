<% provide(:title, "Edit user") %> 
<h1>Atualizar Perfil</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Nome" %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Senha" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirme a Senha" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Salvar mudanças", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">modificar gravatar</a>
  </div>
</div>